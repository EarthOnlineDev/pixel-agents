{
  "name": "pixel-office",
  "version": "1.0.0",
  "private": true,
  "description": "Multiplayer pixel art virtual office for coding companions",
  "license": "MIT",
  "workspaces": [
    "webview-ui",
    "server"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:client dev:server",
    "dev:client": "cd webview-ui && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build:client": "cd webview-ui && npm run build",
    "build:server": "cd server && npm run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
